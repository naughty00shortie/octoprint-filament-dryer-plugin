<!-- Filament Dryer Settings -->
<div class="form-group">
    <label for="target_temp">Target Temperature (°C):</label>
    <input id="target_temp" type="number" class="form-control" data-bind="value: settings.plugins.filamentdryer.target_temp">
</div>

<div class="form-group">
    <label for="tolerance">Tolerance (°C):</label>
    <input id="tolerance" type="number" class="form-control" data-bind="value: settings.plugins.filamentdryer.tolerance">
</div>

<div class="form-group">
    <label for="fan_on_cmd">Fan ON Command:</label>
    <input id="fan_on_cmd" type="text" class="form-control" data-bind="value: settings.plugins.filamentdryer.fan_on_cmd">
</div>

<div class="form-group">
    <label for="fan_off_cmd">Fan OFF Command:</label>
    <input id="fan_off_cmd" type="text" class="form-control" data-bind="value: settings.plugins.filamentdryer.fan_off_cmd">
</div>

<div class="form-group">
    <label for="element_on_cmd">Element ON Command:</label>
    <input id="element_on_cmd" type="text" class="form-control" data-bind="value: settings.plugins.filamentdryer.element_on_cmd">
</div>

<div class="form-group">
    <label for="element_off_cmd">Element OFF Command:</label>
    <input id="element_off_cmd" type="text" class="form-control" data-bind="value: settings.plugins.filamentdryer.element_off_cmd">
</div>
