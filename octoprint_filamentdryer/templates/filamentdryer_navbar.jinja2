<li id="filamentdryer-navbar">
    <button id="filamentdryer-toggle" class="btn btn-sm navbar-btn"
            style="border: none; background-color: transparent; padding: 5px 10px;"
            data-bind="click: toggleDryer, css: { 'btn-danger': dryerOn(), 'btn-success': !dryerOn() }">
        <i class="fa-solid fa-raindrops"></i>
        <span data-bind="text: dryerOn() ? 'Dryer ON' : 'Dryer OFF'"></span>
    </button>
</li>

<style>
    #filamentdryer-toggle.btn-danger, #filamentdryer-toggle.btn-success {
        background-color: #dc3545 !important;
        color: white !important;
    }
    #filamentdryer-toggle.btn-success {
        background-color: #28a745 !important;
    }
</style>
