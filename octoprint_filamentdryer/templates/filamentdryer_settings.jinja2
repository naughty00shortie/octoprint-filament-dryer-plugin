<div class="section">
  <h3>Filament Dryer Settings</h3>

  <div class="control-group">
    <label>API URL</label>
    <input type="text" class="input-xxlarge" data-bind="value: settings.plugins.filamentdryer.api_url" placeholder="http://10.0.0.26:8000">
    <span class="help-inline">URL of the dryer controller API (e.g., http://192.168.1.100:8000 or http://filament-dryer.local)</span>
  </div>

  <div class="control-group">
    <label>Fan Pin</label>
    <input type="number" class="input-mini" data-bind="value: fan_pin">
  </div>

  <div class="control-group">
    <label>Heater Pin</label>
    <input type="number" class="input-mini" data-bind="value: heater_pin">
  </div>

  <div class="control-group">
    <label>Target Temperature (&deg;C)</label>
    <input type="number" class="input-mini" data-bind="value: target_temp">
  </div>

  <div class="control-group">
    <label>Tolerance (&deg;C)</label>
    <input type="number" class="input-mini" data-bind="value: tolerance">
  </div>

  <div class="control-group">
    <button class="btn btn-primary" data-bind="click: saveSettings">Save Settings</button>
    <span data-bind="visible: saveStatus">✔️ Saved!</span>
  </div>
</div>
