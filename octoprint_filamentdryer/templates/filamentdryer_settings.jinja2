<div class="section">
  <h3>Dryer Settings</h3>
  <div class="control-group">
    <label>Fan Pin:</label>
    <input type="number" data-bind="value: settings.settings.plugins.dryer_control.fan_pin" />
  </div>
  <div class="control-group">
    <label>Heater Pin:</label>
    <input type="number" data-bind="value: settings.settings.plugins.dryer_control.heater_pin" />
  </div>
  <div class="control-group">
    <label>Target Temp:</label>
    <input type="number" data-bind="value: settings.settings.plugins.dryer_control.target_temp" />
  </div>
  <div class="control-group">
    <label>Tolerance:</label>
    <input type="number" data-bind="value: settings.settings.plugins.dryer_control.tolerance" />
  </div>
</div>
