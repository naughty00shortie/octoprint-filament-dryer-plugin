<div class="form-group">
    <label for="settings_target_temp">Target Temperature (°C):</label>
    <input id="settings_target_temp" type="number" class="form-control"
           data-bind="value: settings.plugins.filamentdryer.target_temp">
</div>

<div class="form-group">
    <label for="settings_tolerance">Tolerance (°C):</label>
    <input id="settings_tolerance" type="number" class="form-control"
           data-bind="value: settings.plugins.filamentdryer.tolerance">
</div>

<div class="form-group">
    <label for="settings_fan_on_cmd">Fan ON Command:</label>
    <input id="settings_fan_on_cmd" type="text" class="form-control"
           data-bind="value: settings.plugins.filamentdryer.fan_on_cmd">
</div>

<div class="form-group">
    <label for="settings_fan_off_cmd">Fan OFF Command:</label>
    <input id="settings_fan_off_cmd" type="text" class="form-control"
           data-bind="value: settings.plugins.filamentdryer.fan_off_cmd">
</div>

<div class="form-group">
    <label for="settings_element_on_cmd">Element ON Command:</label>
    <input id="settings_element_on_cmd" type="text" class="form-control"
           data-bind="value: settings.plugins.filamentdryer.element_on_cmd">
</div>

<div class="form-group">
    <label for="settings_element_off_cmd">Element OFF Command:</label>
    <input id="settings_element_off_cmd" type="text" class="form-control"
           data-bind="value: settings.plugins.filamentdryer.element_off_cmd">
</div>
