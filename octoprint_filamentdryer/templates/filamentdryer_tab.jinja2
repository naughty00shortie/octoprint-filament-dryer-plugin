<div id="tab_plugin_filamentdryer" class="plugin-tab-content">
    <h3>Filament Dryer Control</h3>

    <div class="alert alert-error" data-bind="visible: connectionError" style="margin-bottom: 10px;">
        <strong>Connection Error:</strong> <span data-bind="text: lastErrorMessage"></span>
    </div>

    <div class="row-fluid" style="margin-bottom: 10px;">
        <label style="margin-right: 10px;">Target Temperature (&deg;C):</label>
        <div style="display: inline-flex; align-items: flex-start; gap: 8px;">
            <input type="number" class="input-mini" data-bind="value: targetTemp" style="margin-bottom: 0;">
            <button class="btn btn-small" data-bind="click: saveTargetTemp, enable: !connectionError()" style="margin-bottom: 0; padding-top: 4px;">
                Update
            </button>
            <span data-bind="visible: saveStatus" style="margin-top: 4px;">✔️ Saved!</span>
        </div>
    </div>

    <div class="row-fluid">
        <button class="btn" data-bind="click: toggleSystem, css: {'btn-success': systemOn, 'btn-danger': !systemOn()}, enable: !connectionError()">
            <span data-bind="text: systemOn() ? 'Turn Off Dryer' : 'Turn On Dryer'"></span>
        </button>

        <span style="margin-left: 15px;">Fan: <strong data-bind="text: fanOn() ? 'On' : 'Off'"></strong></span>
        <span style="margin-left: 15px;">Heater: <strong data-bind="text: heaterOn() ? 'On' : 'Off'"></strong></span>
    </div>

    <div class="row-fluid" style="margin-top: 10px;">
        <span>Actual Temp: <strong data-bind="text: actualTempDisplay"></strong> °C</span>
        <span style="margin-left: 20px;">Humidity: <strong data-bind="text: humidityDisplay"></strong> %</span>
    </div>


    <hr>

    <h3>Temperature & Humidity History</h3>
    <div style="height: 400px;">
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <canvas id="dryerChart"></canvas>
    </div>
</div>
