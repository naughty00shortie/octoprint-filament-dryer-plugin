<li id="filamentdryer-navbar">
    <button id="filamentdryer-toggle" class="btn btn-sm navbar-btn" style="border: none; background-color: transparent; padding: 5px 10px;"
            data-bind="click: toggleDryer, css: { 'btn-danger': dryerOn(), 'btn-success': !dryerOn() }, hover: 'btn-primary'">
        <i class="fas fa-fire"></i>
        <span data-bind="text: dryerOn() ? 'Dryer ON' : 'Dryer OFF'"></span>
    </button>
</li>
